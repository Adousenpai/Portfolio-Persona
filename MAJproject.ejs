<link rel="stylesheet" href="/css/bootstrap.min.css" />
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        Update project
      </h1>
      <img
        src="/uploads/<%= project.image %>"
        class="card-img-top"
        alt="<%= project.title %>"
      />

      <form
        action="/admin/update/<%= project.id %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="title">Titre</label>
          <input
            type="text"
            name="title"
            id="title"
            class="form-control"
            value="<%= project.title %>"
          />
        </div>
        <div class="form-group">
          <label for="paragraphe">Description</label>
          <textarea
            type="textarea"
            name="description"
            id="description"
            class="form-control"
          >
<%= project.description %></textarea
          >
        </div>
        <div class="form-group">
          <label for="prev">Git Page :</label>
          <input
            type="text"
            id="prev"
            name="prev"
            class="form-control"
            value="<%= project.prev %>"
          />
        </div>
        <div class="form-group">
          <label for="git">Github :</label>
          <input
            type="text"
            id="git"
            name="git"
            class="form-control"
            value="<%= project.git %>"
          />
        </div>
        <div class="form-group">
          <input
            type="file"
            name="image"
            id="image"
            class="form-control-file"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Update Change
        </button>
        <a class="btn btn-primary btn-block" href="/admin/dashboard">Cancel</a>
      </form>
    </div>
  </div>
</div>
