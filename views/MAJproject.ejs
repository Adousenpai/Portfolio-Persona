<link rel="stylesheet" href="/css/style.css" />
<section class="Contact">
  <div class="black-background"></div>
  <div class="contact-form"></div>

  <form
    class="contact-form"
    action="/admin/update/<%= project.id %>"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="contact-square">
      <h2 class=""><span class="spe-h2">U</span>pdate</h2>
    </div>
    <div class="label-form">
      <label for="title">Titre</label>
      <input
        type="text"
        name="title"
        id="title"
        class="form-control"
        value="<%= project.title %>"
      />
    </div>
    <div class="label-form">
      <label for="paragraphe">Description</label>
      <textarea
        type="textarea"
        name="description"
        id="description"
        class="form-control"
      >
<%= project.description %></textarea
      >
    </div>
    <div class="label-form">
      <label for="prev">Git Page</label>
      <input
        type="text"
        id="prev"
        name="prev"
        class="form-control"
        value="<%= project.prev %>"
      />
    </div>
    <div class="label-form" label-form>
      <label for="git">Github</label>
      <input
        type="text"
        id="git"
        name="git"
        class="form-control"
        value="<%= project.git %>"
      />
    </div>

    <div class="upload-btn-wrapper">
      <button class="btn"><i class="fas fa-paperclip"></i>Upload</button>
      <input type="file" name="image" id="image" />
    </div>

    <div class="contact-btn">
      <a class="contact-btn1" href="/admin/dashboard">Cancel</a>
      <button type="submit" class="contact-btn2">
        Update
      </button>
    </div>
  </form>
</section>
<div id="loader-wrapper">
  <div class="wrap">
    <div class="loading">
      <div class="bounceball"></div>
      <div class="text">NOW LOADING</div>
    </div>
  </div>
</div>

<script src="/js/loading.js"></script>
