
<link rel="stylesheet" href="/css/style.css" />
<section class="Contact">
<div class="black-background"></div>
<div class="contact-form"></div>
    <form action="/contact-post" method="POST" class="contact-form">
      <div class="contact-square">
      <h2><i class="fas fa-envelope"></i>Cont<span class="spe-h2">a</span>ct</h2>
      </div>
      <% include ./components/messages %>
      <div class="label-form">
        <label for="name">Nom</label>
        <input type="text" id="name" name="name" required/>
      </div>
      <div class="label-form">
        <label for="email">Email</label>
        <input type="email" id="email" name="email"required/>
      </div>
      <div class="label-form">
        <label for="title">Sujet</label>
          <input type="text" id="sujet" name="sujet"required />
         <div class="label-form">
        <label for="message">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          cols="33"
          placeholder="..."
        required
        ></textarea>
      </div>
        <div class="contact-btn">
            <a class="contact-btn1" href="/">Retour</a>
        <button class="contact-btn2"type="submit">Envoyer</button>
     
      </div>
    </form>
   
</section>

<div id="loader-wrapper">
  <div class="wrap">
   <div class="loading">
     <div class="bounceball"></div>
     <div class="text">NOW LOADING</div>
   </div>
 </div>
 </div>
 
 <script src="/js/loading.js"></script>